<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PPK" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="OrangeButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/orange_700</item>
        <item name="cornerRadius">10dp</item> <!-- Optional, to match Material Design guidelines -->
    </style>

    <style name="Change" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="backgroundTint">@color/orange_700</item>
    </style>

    <style name="Orange">
        <item name="android:background">@color/orange_700</item>
    </style>



</resources>